<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="2dp"
  android:background="@drawable/person_draw"
  android:orientation="horizontal">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/docent_pic"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    app:civ_border_width="2dp"
    app:civ_border_color="@color/design_default_color_primary_dark"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/docent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Dozent"
      android:textStyle="bold"
      android:textSize="20sp"/>

    <TextView
      android:id="@+id/docent_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hier steht \n was drin "/>

  </LinearLayout>

</LinearLayout>