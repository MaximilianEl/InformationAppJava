<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/bg"
        tools:context=".ui.institute.InstituteCourseActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <RelativeLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <ImageView
                    android:id="@+id/logo"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="60dp"
                    android:src="@drawable/hs_os"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="60dp"
                    android:text="@string/institute_courses"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
        </RelativeLayout>

        <GridLayout
                android:id="@+id/ins_grid"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_masch"
                    android:layout_margin="16dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_baseline_settings_24"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Allgemeiner Maschinenbau (B.Sc.)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standort Lingen (Ems)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_bwl"
                    android:layout_margin="16dp"
                    android:layout_rowWeight="2"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_baseline_account_balance_24"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Betriebswirtschaft und Management (B.A.)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standort Lingen (Ems)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_infor"
                    android:layout_margin="16dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_baseline_computer_24"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wirtschaftsinformatik (B.Sc.)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Stadt Lingen (Ems)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_ing"
                    android:layout_margin="16dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_baseline_build_24"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wirtschaftsingenieurwesen (B.Sc.)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standort Lingen (Ems)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_mba"
                    android:layout_margin="16dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_baseline_business_24"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wirtschaftsingenieurwesen (MBA)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="berufsbegleitend"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_energy"
                    android:layout_margin="16dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_baseline_build_24"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wirtschaftsingenieurwesen - Energiewirtschaft (M.Sc.)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standort Lingen (Ems)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/ins_mut"
                    android:layout_margin="16dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_corner_radius="8dp"
                            android:id="@+id/ins_images"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_baseline_business_center_24"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/design_default_color_primary_dark"/>

                    <TextView
                            android:id="@+id/ins_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Management und Technik (M.Sc.)"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/ins_item_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standort Lingen (Ems)"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>