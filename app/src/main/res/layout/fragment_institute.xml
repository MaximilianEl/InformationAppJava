<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/fragment_institute_id"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg"
  tools:context=".ui.institute.InstituteFragment"
  android:orientation="vertical">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/ins_Kurse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Kurse"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>

      <TextView
        android:id="@+id/ins_ersti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ersti-Hilfe"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>

      <TextView
        android:id="@+id/ins_veranstaltungen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Veranstaltungen"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp">

        <TextView
          android:id="@+id/ins_personen"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Personen"
          android:textStyle="bold"
          android:textSize="20sp"
          android:textAlignment="center"/>

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/personRecycler"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>


      </LinearLayout>

    </LinearLayout>

  </ScrollView>


</LinearLayout>


